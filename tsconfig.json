{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
			"$*": ["*"]
		},
    "target": "ES6",
    "module": "ES2020",
		"lib": ["dom", "dom.iterable", "ES6"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
		"importHelpers": true,
    "noEmit": true,
    "jsx": "react-jsx",
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/**"]
}